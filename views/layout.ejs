  <body>
    <nav>
      <div class="nav-wrapper light-blue darken-4">
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <a href="/<% if (typeof user == 'object' && user) { if (user.id == null) {} else {%>profile/<%= user.id %><%}}%>" class="brand-logo center">GuitStrum</a>
          <li><a href="/chords/">Chords</a></li>
          <li><a href="/songs/">Songs</a></li>
        </ul>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if (currentUser) { %>
            <li><a href="/<% if (typeof user == 'object' && user) { %>profile/<%= user.id %><%}%>"><% if (typeof user == 'object' && user) { %><%= user.name %><%}%></a></li>
            <li><a href="/auth/logout">Logout</a></li>
          <% } else { %>
          <li><a href="/auth/signup">Signup</a></li>
          <li><a href="/auth/login">Login</a></li>
          <% } %>
        </ul>
      </div>
    </nav>
    <main>
      <% include partials/alerts %>

      <%- body %>
    </main>
