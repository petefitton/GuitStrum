<!-- <h1>This page should have a list of saved chords on the left side of the page with a search bar on the right side plus a random chord button in the bottom right corner</h1> -->

<div class="row">
  <div class="col s4 offset-s1">
    <h3>My Chords:</h3>
    <!-- for each chord that user has through ChordsUsers -->
    <% if (typeof user == 'object' && user) { %>
      <% if (typeof user.chords == 'object' && user.chords) { %>
        <% user.chords.forEach(function(chord) { %>
          <p><a href="/chords/result?chordSearch=<%= chord.imageChordName %>"><%= chord.colloqChordName %></a></p>
        <% }) %>
      <% } %>
    <% } %>
  </div>
  <div class="col s4 offset-s1 topMarg72">
  </div>
  <div class="col s4 offset-s1">
    <form action="/chords/result" method="get" id="search">
      <input type="search" name="chordSearch" id="chordSearch" placeholder="Search for Chord">
      <button form="search" type="submit">SEARCH</button>
    </form>
    <div class="row"></div>
    <form action="/chords/random" method="get" id="rand">
      <button form="rand" type="submit" name="chordSearch" class="black-text yellow lighten-1 waves-effect waves-light btn-large">RANDOM CHORD</button>
    </form>
  </div>
</div>